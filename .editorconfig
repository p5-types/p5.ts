# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
# Unix-style newlines
end_of_line = lf
# Newline ending every file
insert_final_newline = true

# Rules for JavaScript files:

[*.{js,ts}]
# 2 space indentation
indent_style = space
indent_size = 2
# No trailing spaces
trim_trailing_whitespace = true
